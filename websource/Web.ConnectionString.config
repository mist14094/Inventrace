<?xml version="1.0"?>

<connectionStrings>

  <!--
  
  Note: You need only ONE connection string in this file
  
  Replace "MyServerName" to your SQL Server name
  Replace "MyDBName" to your SQL DataBase name
  Replace "MyUserName" to your sql user login
  Replace "MyPass" to your sql user password
  
  You could test your connection string at ~/tools/cntest_tools.aspx
  
  -->
  
  <!--Example For WebServer machine (login and pass) -->
  <add name="AdvantConnectionString"
      connectionString="Data Source='MyServerName'; Connect Timeout='30'; Initial Catalog='MyDBName'; Persist Security Info='True'; User ID='MyUserName'; Password='MyPass';"
      providerName="System.Data.SqlClient" />
  
  <!--Example For local machine (Integrated Security) -->
  <!--<add name="AdvantConnectionString"
      connectionString="Data Source='MyServerName'; Connect Timeout='5'; Initial Catalog='MyDBName'; Integrated Security='True';"
      providerName="System.Data.SqlClient" />-->
  
</connectionStrings>

